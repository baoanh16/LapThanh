									em.mdi.mdi-map-marker
									span Lot I-10-2, D2 Str, Saigon High-Tech Park, Dist 9, HCM City, Vietnam
								a(href="tel:842839979874")
									em.mdi.mdi-phone
									span +84-28 3997 9874
								a(href="fax:842839979873")
									em.mdi.mdi-fax
									span +84-28 3997 9873
								a(href="mailto:trangltc@yahoo.com")
									em.mdi.mdi-email
									span trangltc@yahoo.com
