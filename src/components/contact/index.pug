				.wrap-form
					.form-group
						label
						input(type="text" placeholder="Họ và tên...")
					.form-group
						label
						input(type="text" placeholder="Email...")
					.form-group
						label
						input(type="text" placeholder="Tiêu đề...")
					.form-group
						label
						input(type="text" placeholder="Số điện thoại...")
					.form-group
						label
						textarea(name="", cols="30", rows="10" placeholder="Nội dung...")
					.submit-form
						.captcha
							img(src="./img/lienhe/captcha-img.jpg", alt="")
						.return-btn
							img(src="./img/lienhe/return-btn.png", alt="")
